{
  "type": "object",
  "properties": {
    "buildingInsights": {
      "type": "object",
      "properties": {
        "imageryQuality": { "type": "string" },
        "note": { "type": "string" }
      },
      "required": ["imageryQuality"]
    },
    "solarPotential": {
      "type": "object",
      "properties": {
        "panelCapacityWatts": { "type": "integer" },
        "maxArrayPanelsCount": { "type": "integer" },
        "recommendedPanelCount": { "type": "integer" },
        "capacityKw": { "type": "number" },
        "annualKwh": { "type": "number" },
        "monthlyKwh": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 12,
          "maxItems": 12
        },
        "roofSegments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "area_m2": { "type": "number" },
              "tilt_deg": { "type": "number" },
              "azimuth_deg": { "type": "number" }
            },
            "required": ["id"]
          }
        },
        "irradianceStats": {
          "type": "object",
          "properties": {
            "GHI_kWh_m2_yr": { "type": "number" },
            "DNI_kWh_m2_yr": { "type": "number" },
            "DHI_kWh_m2_yr": { "type": "number" }
          }
        },
        "assumptions": { "type": "object" },
        "dataSources": { "type": "array", "items": { "type": "string" } }
      },
      "required": [
        "panelCapacityWatts",
        "recommendedPanelCount",
        "capacityKw",
        "annualKwh",
        "monthlyKwh"
      ]
    }
  },
  "required": ["buildingInsights", "solarPotential"]
}
